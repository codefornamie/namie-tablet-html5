<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/widget"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="20dp"
    android:paddingLeft="0dp"
    android:paddingRight="0dp"
    android:paddingBottom="20dp"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_gravity="center_horizontal"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/chara"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_gravity="start"
            android:adjustViewBounds="true"
            android:contentDescription="@string/character_name" />

        <TextView
            android:id="@+id/fukidashi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingStart="60dp"
            android:paddingEnd="30dp"
            android:ellipsize="end"
            android:maxLines="2"
            android:scrollHorizontally="true"
            android:background="@drawable/img_fukidashi"
            android:gravity="center_vertical"
            android:textColor="@android:color/black"
            android:textSize="33px" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="20dp"
        android:orientation="horizontal"
        android:layout_gravity="center_horizontal" >
        
        <ImageButton
            android:visibility="invisible"
            android:background="@drawable/button_news"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="65dp"
            android:layout_weight="1"/>

        <ImageButton
                android:id="@+id/link_news"
                android:background="@drawable/button_news"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="65dp"
                android:layout_weight="1"/>

            <ImageButton
                android:id="@+id/link_post"
                android:background="@drawable/button_post"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="65dp"
                android:layout_weight="1"/>

            <ImageButton
                android:id="@+id/link_dojo"
                android:background="@drawable/button_dojyo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="65dp"
                android:layout_weight="1"/>

            <ImageButton
                android:visibility="invisible"
                android:background="@drawable/button_news"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="65dp"
                android:layout_weight="1"/>
            </LinearLayout>

</LinearLayout>