<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/widget"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/frame"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/chara"
            android:src="@drawable/img_ukedon_1"
            android:layout_width="141px"
            android:layout_height="180px"
            android:layout_gravity="center"
            android:adjustViewBounds="true"
            android:contentDescription="@string/character_name" />

        <FrameLayout
            android:id="@+id/message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >
            <TextView
                android:id="@+id/fukidashi"
                android:visibility="invisible"
                android:background="@drawable/bg_bubble"
                android:layout_width="669px"
                android:layout_height="237px"
                android:paddingStart="60dp"
                android:paddingEnd="30dp"
                android:ellipsize="end"
                android:maxLines="2"
                android:scrollHorizontally="true"
                android:gravity="center_vertical"
                android:textColor="@android:color/black"
                android:textSize="33px" />
            <TextView
                android:id="@+id/recommend"
                android:visibility="invisible"
                android:background="@drawable/bg_news"
                android:layout_width="659px"
                android:layout_height="259px"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:ellipsize="end"
                android:maxLines="2"
                android:scrollHorizontally="true"
                android:gravity="center_vertical"
                android:textColor="@android:color/black"
                android:textSize="33px" />
            <LinearLayout
                android:id="@+id/recommend_with_thumbnail"
                android:visibility="visible"
                android:background="@drawable/bg_news"
                android:layout_width="659px"
                android:layout_height="259px"
                android:layout_gravity="center_horizontal"
                android:paddingTop="44px"
                android:paddingEnd="4px"
                android:orientation="horizontal" >

                    <TextView
                        android:id="@+id/recommend2"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginBottom="100px"
                        android:layout_marginStart="4px"
                        android:layout_marginEnd="16px"
                        android:layout_weight="0.64"
                        android:ellipsize="end"
                        android:gravity="center_vertical"
                        android:maxLines="2"
                        android:paddingEnd="0dp"
                        android:paddingStart="10dp"
                        android:scrollHorizontally="true"
                        android:text="hogehoge"
                        android:textColor="@android:color/black"
                        android:textSize="33px" />

                    <ImageView
                        android:id="@+id/thumb"
            android:src="@drawable/img_ukedon_1"
                        android:layout_width="208px"
                        android:layout_height="189px"
                        android:layout_gravity="end"
                        android:adjustViewBounds="true"
                        android:contentDescription="@string/character_name" />
            </LinearLayout>
        </FrameLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center_horizontal" >
        <LinearLayout
            android:layout_width="207px"
            android:layout_height="wrap_content">
        </LinearLayout>
        <LinearLayout
            android:gravity="center_horizontal"
            android:layout_width="207px"
            android:layout_height="wrap_content">
            <ImageButton
            android:id="@+id/link_news"
            android:background="@drawable/button_news"
            android:layout_width="200px"
            android:layout_height="235px"/>
        </LinearLayout>
        <LinearLayout
            android:gravity="center_horizontal"
            android:layout_width="207px"
            android:layout_height="wrap_content">
        <ImageButton
            android:id="@+id/link_post"
            android:background="@drawable/button_photo"
            android:layout_width="147px"
            android:layout_height="235px"/>
        </LinearLayout>
        <LinearLayout
            android:gravity="center_horizontal"
            android:layout_width="207px"
            android:layout_height="wrap_content">
        <ImageButton
            android:id="@+id/link_dojo"
            android:background="@drawable/button_dojyo"
            android:layout_width="206px"
            android:layout_height="235px"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>