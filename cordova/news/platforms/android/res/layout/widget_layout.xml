<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/widget"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="top"
    android:orientation="vertical" >
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="top"
        android:orientation="vertical" >
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:orientation="vertical" >
            <ImageView
                android:id="@+id/chara"
                android:src="@drawable/img_ukedon_1"
                android:layout_width="94dp"
                android:layout_height="120dp"
                android:layout_gravity="center"
                android:adjustViewBounds="true"
                android:contentDescription="@string/character_name" />
            <FrameLayout
                android:id="@+id/message"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="13dp" >
                <TextView
                    android:id="@+id/fukidashi"
                    android:visibility="invisible"
                    android:background="@drawable/bg_bubble"
                    android:layout_width="320dp"
                    android:layout_height="127dp"
                    android:paddingStart="27dp"
                    android:paddingEnd="27dp"
                    android:ellipsize="end"
                    android:maxLines="2"
                    android:scrollHorizontally="true"
                    android:gravity="center_vertical"
                    android:textColor="@android:color/black"
                    android:textSize="22dp" />
                <LinearLayout
                    android:id="@+id/recommend"
                    android:visibility="invisible"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/article_title"
                        android:background="@drawable/bg_news"
                        android:layout_width="326dp"
                        android:layout_height="155dp"
                        android:paddingTop="29dp"
                        android:paddingBottom="67dp"
                        android:paddingStart="10dp"
                        android:paddingEnd="10dp"
                        android:ellipsize="end"
                        android:maxLines="2"
                        android:scrollHorizontally="true"
                        android:gravity="center_vertical"
                        android:textColor="@android:color/black"
                        android:textSize="22dp" />
                </LinearLayout>
            </FrameLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:orientation="horizontal" >
            <LinearLayout
                android:gravity="center_horizontal"
                android:layout_width="130dp"
                android:layout_height="wrap_content">
                <ImageButton
                    android:id="@+id/link_news"
                    android:background="@drawable/button_news"
                    android:layout_width="130dp"
                    android:layout_height="148dp"/>
            </LinearLayout>
            <LinearLayout
                android:gravity="center_horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <ImageButton
                    android:id="@+id/link_post"
                    android:background="@drawable/button_photo"
                    android:layout_width="98dp"
                    android:layout_height="149dp"/>
            </LinearLayout>
            <LinearLayout
                android:gravity="center_horizontal"
                android:layout_width="133dp"
                android:layout_height="wrap_content">
                <ImageButton
                    android:id="@+id/link_dojo"
                    android:background="@drawable/button_dojo"
                    android:layout_width="127dp"
                    android:layout_height="148dp"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
