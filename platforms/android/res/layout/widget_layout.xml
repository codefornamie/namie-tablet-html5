<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/widget"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginBottom="@dimen/widget_margin_bottom"
    android:layout_marginLeft="@dimen/widget_margin_left"
    android:layout_marginRight="@dimen/widget_margin_right"
    android:layout_marginTop="@dimen/widget_margin_top"
    android:gravity="right"
    android:orientation="horizontal" >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/fukidashi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/fukidashi"
            android:textColor="@android:color/white"
            android:textSize="42sp" />

        <ImageView
            android:id="@+id/chara"
            android:layout_width="160sp"
            android:layout_height="160sp"
            android:layout_gravity="right"
            android:layout_weight="0"
            android:adjustViewBounds="true"
            android:contentDescription="@string/character_name"
            android:minHeight="160sp"
            android:minWidth="160sp" />
    </LinearLayout>

</LinearLayout>